<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/headerCard"
                layout="@layout/header_home_layout"/>

            <ProgressBar
                android:id="@+id/pbLoading"
                android:layout_width="@dimen/loading_progress_size"
                android:layout_height="@dimen/loading_progress_size"
                android:layout_gravity="center_horizontal|top"
                android:layout_marginTop="@dimen/layout_margin_16dp"
                app:layout_constraintTop_toBottomOf="@id/headerCard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                tools:visibility="gone"/>

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpSlider"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/pbLoading"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_marginTop="@dimen/layout_margin_16dp"
                android:paddingHorizontal="@dimen/slider_horizontal_padding"
                android:visibility="gone"
                tools:visibility="visible"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/vpSlider">
                <include
                    android:id="@+id/popular"
                    layout="@layout/popular_movies_layout"/>

                <include
                    android:id="@+id/topRated"
                    layout="@layout/top_rated_movies_layout"/>

                <include
                    android:id="@+id/nowPlayingGroup"
                    layout="@layout/now_playing_movies_layout"/>

                <include
                    android:id="@+id/upComing"
                    layout="@layout/up_coming_movies_layout"/>

                <View
                    app:layout_constraintTop_toBottomOf="@id/upComing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/layout_margin_32dp"/>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>