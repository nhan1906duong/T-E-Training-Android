<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtYear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/layout_margin_16dp"
        android:layout_marginTop="@dimen/layout_margin_8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2011"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtMovieTitle"
        style="@style/TextAppearance.MaterialComponents.Subtitle2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/layout_margin_16dp"
        app:layout_constraintStart_toEndOf="@id/txtYear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/txtYear"
        tools:text="@tools:sample/full_names"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtCharacter"
        style="@style/TextAppearance.MaterialComponents.Body2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/layout_margin_16dp"
        android:layout_marginTop="@dimen/layout_margin_4dp"
        android:layout_marginBottom="@dimen/layout_margin_8dp"
        app:layout_constraintStart_toEndOf="@id/txtYear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtMovieTitle"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="Shang Chi"/>

</androidx.constraintlayout.widget.ConstraintLayout>