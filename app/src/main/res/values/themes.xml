<resources>
    <!-- Base application theme. -->
    <style name="Theme.TETrainingAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/color_text_black</item>
        <item name="buttonStyle">@style/CustomButtonStyle</item>
        <item name="editTextStyle">@style/CustomEdittextStyle</item>
    </style>

    <style name="CustomEdittextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/color_text_black</item>
        <item name="android:paddingStart">@dimen/edittext_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/edittext_padding_horizontal</item>
        <item name="android:textSize">@dimen/edittext_text_size</item>
        <item name="android:paddingBottom">@dimen/edittext_padding_bottom</item>
    </style>

    <style name="CustomButtonStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:height">@dimen/button_height</item>
        <item name="android:gravity">center</item>
    </style>
</resources>